<div class="row">
  <div class="col-sm-4">
    <% @bookmarks.each do |bookmark| %>
      <h3><%= bookmark.title %></h3>
      <p><%= bookmark.body %></p>
      <a href="<%= bookmark.img_url %>" target="_blank"><%= bookmark.img_url %></a>
      <br> 
      <br>
      <%= link_to 'Edit', edit_bookmark_path(bookmark), class: 'btn btn-warning' %>
      <%= link_to 'Delete', bookmark_path(bookmark), method: :delete, data: {confirm: "Are you sure?"}, class: 'btn btn-danger' %> 
      <hr>
    <% end %>
  </div>
  <div class="col-sm-8">
    <img class="img-responsive" src="https://proxy.duckduckgo.com/iu/?u=https%3A%2F%2Fbuildinglocal.files.wordpress.com%2F2011%2F10%2Fbarichara4.jpg&f=1" alt="">
    <br>
